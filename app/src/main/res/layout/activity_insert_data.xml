<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.asheransari.habittrack.insert_data"
    android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/insert_UserName"
            android:padding="10dp"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"
            android:text="M. ASher Ansari"
            android:textColor="#8466ec"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:text="Please Enter The Todo Detail Here..!!"
        android:textSize="20sp"
        android:textColor="#086908"
        android:textAlignment="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Enter Your Todo Here..!!"
        android:textSize="18sp"
        android:textColor="#ea0404"
        android:textColorHint="#0a34de"
        android:id="@+id/editText_detail"
        android:layout_weight="0.20"
        android:paddingLeft="10dp"
        android:background="@drawable/my_border"/>
    <Button
        android:id="@+id/btn_insert"
        android:text="Insert"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
